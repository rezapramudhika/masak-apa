<div>
    <h1>Register</h1>
</div>

<%-include('./partials/header.ejs')%>

<div>
    <form method="post">
        <table>
            <tr>
                <th>Name</th>
                <th>:</th>
                <th><input type="text" name="name" value="<%=name%>"></th>
            </tr>
            <tr>
                <th>Email</th>
                <th>:</th>
                <th><input type="text" name="email" value="<%=email%>"></th>
            </tr>
            <tr>
                <th>Password</th>
                <th>:</th>
                <th><input type="password" name="password"></th>
            </tr>
            <tr>
                <th><input type="submit" value="Register"></th>
            </tr>
        </table>
    </form>
</div>

<div>
    <table><tr><th style="color:red"><%=err%></th></tr></table>
</div>